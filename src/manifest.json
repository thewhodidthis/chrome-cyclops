{
  "name": "Cyclops",
  "short_name": "cyclops",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Helps source images while browsing",
  "homepage_url": "https://cyclops.ws",
  "minimum_chrome_version": "49",
  "icons": {
    "16": "img/white/icon16.png",
    "19": "img/blue/icon19.png",
    "32": "img/blue/icon32.png",
    "48": "img/blue/icon48.png",
    "128": "img/blue/icon128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "exclude_matches": [
        "*://localhost/"
      ],
      "js": [
        "js/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "@cyclops-toggle-timer": {
      "suggested_key": {
        "default": "Ctrl+Shift+5"
      },
      "description": "Toggle timer"
    },
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+K"
      }
    }
  },
  "browser_action": {
    "default_icon": "img/blue/icon19.png"
  },
  "permissions": [
    "tabs",
    "alarms",
    "storage",
    "notifications",
    "contextMenus",
    "<all_urls>"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
